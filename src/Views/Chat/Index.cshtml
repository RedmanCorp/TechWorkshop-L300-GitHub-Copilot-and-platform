@{
    ViewData["Title"] = "AI Chat";
}

<div class="container mt-4">
    <h1 class="mb-4">Chat with AI Assistant</h1>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Conversation</h5>
                    <form asp-action="ClearChat" method="post">
                        <button type="submit" class="btn btn-sm btn-outline-secondary">Clear Chat</button>
                    </form>
                </div>
                <div class="card-body">
                    <div class="chat-area mb-3">
                        <textarea 
                            id="chatHistory" 
                            class="form-control" 
                            rows="15" 
                            readonly 
                            style="resize: none; background-color: #f8f9fa;">@ViewBag.ChatHistory</textarea>
                    </div>
                    
                    <form asp-action="SendMessage" method="post">
                        <div class="input-group">
                            <input 
                                type="text" 
                                name="userMessage" 
                                class="form-control" 
                                placeholder="Type your message here..." 
                                required 
                                autofocus>
                            <button type="submit" class="btn btn-primary">
                                Send
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">About</h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        This chat interface is powered by Microsoft Azure OpenAI's GPT-4o-mini model, 
                        a fast and efficient AI language model designed to assist you with 
                        questions about Zava Storefront.
                    </p>
                    <p class="card-text">
                        <strong>Tips:</strong>
                    </p>
                    <ul class="small">
                        <li>Ask about products</li>
                        <li>Get shopping advice</li>
                        <li>Learn about features</li>
                        <li>Get general assistance</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-scroll to bottom of chat history
        document.addEventListener('DOMContentLoaded', function() {
            var chatArea = document.getElementById('chatHistory');
            if (chatArea) {
                chatArea.scrollTop = chatArea.scrollHeight;
            }
        });
    </script>
}
